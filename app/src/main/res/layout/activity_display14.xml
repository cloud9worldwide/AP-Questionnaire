<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apthai.ap_questionaire.app.Display14Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_background"
        android:scaleType="fitXY" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/TITLE"
        android:layout_height="50dp"
        android:id="@+id/project_name" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/sizeContent"
        android:layout_width="1000dp"
        android:layout_height="525dp"
        android:background="@color/WHITE"
        android:layout_alignParentEnd="false"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marginTop_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="75dp"
            android:id="@+id/lbl_question"
            android:layout_alignBottom="@+id/lbl_line"
            android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="horizontal"
            >
            <ScrollView
                android:layout_alignBottom="@+id/lbl_line"
                android:layout_alignTop="@+id/footer"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/scrollView"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/AP_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical" >
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_gravity="center" />
                    <LinearLayout
                        android:id="@+id/pack"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/btn_minus"
                            android:src="@drawable/btn_minus"
                            />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:text="Medium Text"
                            android:textSize="20dp"
                            android:id="@+id/txtResult"
                            android:gravity="center"
                            android:layout_gravity="center" />
                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/btn_plus"
                            android:src="@drawable/btn_plus"
                            />

                        </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/footer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/footer"
            android:layout_below="@+id/scrollView">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_btn"
                android:id="@+id/btnBack"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_btn_"
                android:id="@+id/btnNext"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null" />
            <TextView
                android:id="@+id/navigatorBar"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/btnBack"
                android:layout_toLeftOf="@+id/btnNext"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
