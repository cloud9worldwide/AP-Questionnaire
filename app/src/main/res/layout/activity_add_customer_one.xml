<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    tools:context="com.apthai.ap_questionaire.app.AddCustomerOneActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_background"
        android:layout_below="@+id/project_name" />
    <TextView
        android:text="@string/project_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/box_title"
        android:paddingTop="10dp"
        android:layout_height="50dp"
        android:id="@+id/project_name" />
    <ImageButton
        android:layout_marginTop="3dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnMenu"
        android:scaleType="center"
        android:layout_alignParentStart="true"
        android:src="@drawable/menu"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/sizeContent"
        android:layout_width="1200dp"
        android:layout_height="fill_parent"
        android:background="@color/WHITE"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:clickable="false">
        <TextView
            android:layout_marginTop="20dp"
            android:text="@string/title_activity_customer_look_info"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="30dp"
            android:id="@+id/question_title"
            />
        <TextView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:id="@+id/lbl_line"
            android:layout_margin="30dp"
            android:background="@color/line"
            android:layout_alignBottom="@+id/question_title"
            android:layout_gravity="center_horizontal" />
        <ScrollView
            android:layout_alignBottom="@+id/lbl_line"
            android:layout_alignTop="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:id="@+id/scrollView"
            android:layout_gravity="center"
            android:fillViewport="false">
            <LinearLayout
                android:id="@+id/AP_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_header"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/please_fill_completed"
                    android:layout_alignBottom="@+id/question_title"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:id="@+id/layout_customer_add_line1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    //L I N E 1

                    <TextView
                        android:text="@string/add_customer_prefix"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/lblPrefix"
                        />
                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:id="@+id/ddlPrefix"
                        android:background="@drawable/box_login"
                        android:paddingLeft="10dp"
                        />
                    <LinearLayout
                        android:layout_width="120dp"
                        android:paddingLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="40dp">
                        <TextView
                            android:text="@string/add_customer_prefix"
                            android:layout_width="120dp"
                            android:gravity="bottom"
                            android:layout_height="20dp"
                            android:id="@+id/lbl_prefix_extra1"
                            />
                        <TextView
                            android:text="@string/add_customer_prefix_extra"
                            android:layout_width="120dp"
                            android:gravity="top"
                            android:layout_height="20dp"
                            android:id="@+id/lbl_prefix_extra2"
                            />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/txt_Prefix"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_large"
                        android:alpha="1"
                        android:paddingLeft="10dp"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/add_customer_prefix" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_customer_add_line2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    //L I N E 2

                    <TextView
                        android:text="@string/add_customer_name"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/lbl_add_customer_name"
                        />

                    <EditText
                        android:id="@+id/txt_FirstName"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_large"
                        android:alpha="1"
                        android:paddingLeft="10dp"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/add_customer_name" />
                    <TextView
                        android:text="@string/add_customer_surname"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_height="35dp"
                        android:id="@+id/lbl_add_customer_surname"
                        />

                    <EditText
                        android:id="@+id/txt_LastName"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_large"
                        android:alpha="1"
                        android:lines="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:paddingLeft="10dp"
                        android:hint="@string/customer_look_up_hint_surname" />
                    <TextView
                        android:text="@string/add_customer_nickname"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/lblNickname"
                        />
                    <EditText
                        android:id="@+id/txtNickname"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_large"
                        android:alpha="1"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:hint="@string/add_customer_nickname" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_customer_add_line3"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal" >

                    //L I N E 3

                    <TextView
                        android:text="@string/add_customer_email"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/lblEmail"
                        />
                    <EditText
                        android:id="@+id/txt_Email"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_large"
                        android:alpha="1"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:hint="@string/add_customer_email" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:paddingLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="40dp">
                        <TextView
                            android:text="@string/add_customer_mobile_line1"
                            android:layout_width="90dp"
                            android:gravity="bottom"
                            android:layout_height="20dp"
                            android:id="@+id/lbl_add_customer_mobile_line1"
                            />
                        <TextView
                            android:text="@string/add_customer_mobile_line2"
                            android:layout_width="90dp"
                            android:gravity="top"
                            android:layout_height="20dp"
                            android:id="@+id/lbl_add_customer_mobile_line2"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_customer_add_group_mobile"
                        android:layout_width="280dp"
                        android:layout_height="35dp"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/txt_digit_mobile1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"

                            android:inputType="number"
                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="number"

                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            android:nextFocusDown="@id/txt_digit_mobile4"
                            />
                        <TextView
                            android:id="@+id/lbl_digit_mobile2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            android:nextFocusDown="@id/txt_digit_mobile5"
                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            android:nextFocusDown="@id/txt_digit_mobile6"
                            />

                        <EditText
                            android:id="@+id/txt_digit_mobile6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            android:nextFocusDown="@id/txt_digit_mobile7"
                            />
                        <TextView
                            android:id="@+id/lbl_digit_mobile3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            android:nextFocusDown="@id/txt_digit_mobile8"
                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            android:nextFocusDown="@id/txt_digit_mobile9"
                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <EditText
                            android:id="@+id/txt_digit_mobile10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="115dp"
                        android:paddingLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="40dp">
                        <TextView
                            android:text="@string/add_customer_tel_home_BKK_line1"
                            android:layout_width="110dp"
                            android:gravity="bottom"
                            android:layout_height="20dp"
                            android:id="@+id/lbl_add_customer_tel_home_other_line1"
                            />
                        <TextView
                            android:text="@string/add_customer_tel_home_BKK_line2"
                            android:layout_width="110dp"
                            android:gravity="top"
                            android:layout_height="20dp"
                            android:id="@+id/lbl_add_customer_tel_home_other_line2"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_customer_add_group_tel_home_other"
                        android:layout_width="260dp"
                        android:layout_height="35dp"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/txt_digit_tel_home1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:selectAllOnFocus="true"
                            android:maxLength="1"
                            android:inputType="numberSigned"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <TextView
                            android:id="@+id/lbl_digit_tel_home2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <TextView
                            android:id="@+id/lbl_digit_tel_home3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                        <EditText
                            android:id="@+id/txt_digit_tel_home9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_digit"
                            android:alpha="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:maxLength="1"
                            android:selectAllOnFocus="true"
                            android:inputType="numberSigned"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_customer_add_line4"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    //L I N E 4

                    <TextView
                        android:text="@string/add_customer_birthday"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/lbl_add_customer_birthday"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/box_large"
                        android:id="@+id/datePicker" />

                    <ImageButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_add_phone"
                        android:id="@+id/btnAddMobiles"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        />
                    <LinearLayout
                        android:layout_width="240dp"
                        android:orientation="vertical"
                        android:layout_height="40dp"
                        >
                        <LinearLayout
                            android:layout_width="240dp"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_height="20dp"
                            >
                            <TextView

                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_mobile1"
                                />
                            <TextView

                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_mobile2"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="240dp"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_height="20dp">
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_mobile3"
                                />
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_mobile4"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_add_phone"
                        android:id="@+id/btnAddPhone"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        />
                    <LinearLayout
                        android:layout_width="240dp"
                        android:orientation="vertical"
                        android:layout_height="40dp"
                        >
                        <LinearLayout
                            android:layout_width="240dp"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_height="20dp"
                            >
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_phone1"
                                />
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_phone2"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="240dp"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_height="20dp">
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_phone3"
                                />
                            <TextView
                                android:layout_width="120dp"
                                android:gravity="bottom"
                                android:layout_height="20dp"
                                android:id="@+id/lbl_add_customer_phone4"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_customer_add_line5"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    //L I N E 5

                    <TextView
                        android:text="@string/add_customer_other_country"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/lblCountry"
                        />
                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:id="@+id/ddlOtherCountry"
                        android:background="@drawable/box_login"
                        android:paddingLeft="10dp"
                        />
                    <TextView
                        android:text="@string/add_customer_nationality"
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/lblNationality"
                        />
                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:id="@+id/ddlNationality"
                        android:background="@drawable/box_login"
                        android:paddingLeft="10dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <RelativeLayout
        android:layout_alignBottom="@+id/sizeContent"
        android:id="@+id/footer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/footer"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
