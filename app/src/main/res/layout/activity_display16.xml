<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apthai.ap_questionaire.app.Display16Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_background"
        android:layout_below="@+id/project_name" />
    <TextView
        android:text="@string/project_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/box_title"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:id="@+id/project_name" />
    <LinearLayout
        android:gravity="center"
        android:id="@+id/sizeContent"
        android:layout_width="1000dp"
        android:layout_height="524dp"
        android:background="@color/WHITE"
        android:layout_alignParentEnd="false"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="false">
        <TextView
            android:layout_marginTop="10dp"
            android:text="@string/question_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:id="@+id/question_title"
            />
        <TextView
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:id="@+id/lbl_line"
            android:background="@color/line"
            android:layout_alignBottom="@+id/question_title"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="75dp"
            android:id="@+id/lbl_question"
            android:layout_alignBottom="@+id/lbl_line"
            android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:orientation="horizontal"
            >

            <ScrollView
                android:layout_alignBottom="@+id/lbl_line"
                android:layout_alignTop="@+id/footer"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/scrollView"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/AP_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtResult"
                        android:text=""
                        android:layout_gravity="center_horizontal" />
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="700dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/pack">
                        <SeekBar
                            android:background="@drawable/box_large"
                            android:layout_width="500dp"
                            android:layout_height="50dp"
                            android:id="@+id/seekBar"
                            android:thumb="@drawable/thumb_16"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1" />
                        <RelativeLayout
                            android:layout_width="700dp"
                            android:layout_height="wrap_content"
                            >
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/min_rank"
                            android:text="min"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/middle_rank"
                            android:text="mid"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/max_rank"
                            android:text="max"
                            android:layout_alignParentRight="true"
                            android:gravity="center_horizontal"
                            />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/footer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/footer"
            android:layout_below="@+id/scrollView">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_back"
                android:id="@+id/btnBack"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_next"
                android:id="@+id/btnNext"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null" />
            <SeekBar
                android:progressDrawable="@drawable/navigator_processed"
                android:thumb="@drawable/icon_navigator"
                android:id="@+id/navigatorBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnBack"
                android:layout_alignTop="@+id/btnBack"
                android:layout_toLeftOf="@+id/btnNext"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
