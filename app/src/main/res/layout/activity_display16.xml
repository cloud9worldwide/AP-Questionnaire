<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apthai.ap_questionaire.app.Display16Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_background"
        android:scaleType="fitXY" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/TITLE"
        android:layout_height="50dp"
        android:id="@+id/project_name" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnEN"
        android:scaleType="center"
        android:src="@drawable/btn_en"
        android:layout_toLeftOf="@+id/btnTH"
        android:layout_alignParentTop="true" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnTH"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_th"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:gravity="center"
        android:id="@+id/sizeContent"
        android:layout_width="1000dp"
        android:layout_height="525dp"
        android:background="@color/WHITE"
        android:layout_alignParentEnd="false"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marginTop_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="75dp"
            android:id="@+id/lbl_question"
            android:layout_alignBottom="@+id/lbl_line"
            android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="horizontal"  >
            <ScrollView
                android:layout_alignBottom="@+id/lbl_line"
                android:layout_alignTop="@+id/footer"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/scrollView"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/AP_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtResult"
                        android:text=""
                        android:layout_gravity="center_horizontal" />
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_gravity="center" />
                    <LinearLayout
                        android:layout_width="700dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/pack">
                        <SeekBar
                            android:background="@drawable/box_large"
                            android:layout_width="500dp"
                            android:layout_height="50dp"
                            android:id="@+id/seekBar"
                            android:thumb="@drawable/thumb_16"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1" />
                        <RelativeLayout
                            android:layout_width="700dp"
                            android:layout_height="wrap_content"
                            >
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/min_rank"
                            android:text="min"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/middle_rank"
                            android:text="mid"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/max_rank"
                            android:text="max"
                            android:layout_alignParentRight="true"
                            android:gravity="center_horizontal"
                            />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/footer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/footer"
            android:layout_below="@+id/scrollView">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_btn"
                android:id="@+id/btnBack"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_btn_"
                android:id="@+id/btnNext"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null" />
            <TextView
                android:id="@+id/navigatorBar"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/btnBack"
                android:layout_toLeftOf="@+id/btnNext"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
